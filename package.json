{
  "name": "client-efflux-frontend",
  "version": "0.3.2",
  "main": "./electron/main.js",
  "author": "benchu",
  "private": true,
  "scripts": {
    "buildMain": "webpack",
    "ele": "electron .",
    "dist": "electron-builder"
  },
  "dependencies": {
    "next": "14.0.2",
    "electron-is-dev": "^1.2.0",
    "electron-store": "^6.0.1"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "asar": false,
    "appId": "efflux",
    "productName": "EFFLUX",
    "copyright": "Copyright Â© 2025",
    "extends": null,
    "files": [
      "electron/**/*",
      "web-ui/**/*",
      "efflux_desktop",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "efflux_desktop",
        "to": "efflux_desktop"
      },
      {
        "from": "web-ui/node_modules",
        "to": "./app/node_modules",
        "filter": ["**/*"]
      }
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "dmg": {
      "background": "assets/appdmg.png",
      "icon": "assets/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ],
      "window": {
        "width": 500,
        "height": 500
      }
    },
    "win": {
      "target": [
        "msi",
        "nsis"
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-Web-Setup-${version}.${ext}",
      "publisherName": "Viking Zhang"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": false
    }
  }
}
